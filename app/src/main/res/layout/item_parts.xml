<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/items_parts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="15dp">

    <TextView
        android:id="@+id/itemName"
        android:layout_width="158dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:gravity="center"
        android:text="items"
        android:textColor="#000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/ordersNumber"
        android:layout_width="34dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/itemName"
        android:layout_alignBottom="@+id/itemName"
        android:layout_marginStart="13dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/itemName"
        android:ems="10"
        android:gravity="center"
        android:inputType="number" />

    <ImageView
        android:id="@+id/addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ordersNumber"
        android:layout_alignBottom="@+id/ordersNumber"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/ordersNumber"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/subItem"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/addItem"
        android:layout_alignBottom="@+id/addItem"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/addItem"
        app:srcCompat="@android:drawable/bottom_bar" />


</RelativeLayout>