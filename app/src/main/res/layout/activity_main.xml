<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/partsCatalouge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/pdfView"
        android:layout_alignEnd="@+id/partsList"
        android:layout_alignBottom="@+id/partsList"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="803dp"
        android:background="#FF8E00"
        android:gravity="center"
        android:text="Parts Catalouge"
        android:textColor="#0027FF" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF8E00"
        android:gravity="center"
        android:text="View PDF"
        android:textColor="#0027FF"
        android:textSize="14sp"></TextView>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="944dp"
        android:layout_height="850dp"
        android:layout_below="@+id/tv_header"
        android:layout_alignParentStart="true"
        android:layout_marginStart="342dp"
        android:layout_marginTop="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partsList"
        android:layout_width="match_parent"
        android:layout_height="797dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="939dp"
        android:layout_marginBottom="0dp" />


</RelativeLayout>